<head>
    <link rel="stylesheet" href="/css/main.css">
    <title>Login Page</title>
</head>
<body class="bg-emerald-200">
<section class="flex">
<div class="bg-emerald-500 flex-col container text-center space-y-9 mt-10 bold text-4xl w-1/2 py-9 rounded">
<h1 class="text-slate-700 text-7xl font-bold">Login</h1>
<% if (messages.error) { %> 
    <%= messages.error %> 
    <% } %>  
<form action="/login" method="post">
    <div>
        <label for="email" class="text-slate-800">Email</label>
        <input type="email" id="email" name="email" required class="m-4">
    </div>
    <div>
        <label for="password" class="text-slate-800">Password</label>
        <input type="password" id="password" name="password" required >
    </div>
    <button class="text-white bg-slate-600 py-3 px-6 rounded mt-9"><a href="/register">Register</a></button>
</form>
</div>
</section>
</body>